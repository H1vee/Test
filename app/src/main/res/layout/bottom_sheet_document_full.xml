<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1decb">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="#000000"
        android:alpha="0.3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <!-- Document Title Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <TextView
                    android:id="@+id/tvFullDocTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="0.9"
                    android:text="@string/military_document"
                    android:textColor="#010101"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    app:layout_constraintEnd_toStartOf="@id/ivFullEmblem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivFullEmblem"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:contentDescription="@string/emblem_description"
                    android:src="@drawable/ic_emblem"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Marquee Status Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#6b4b1a"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvMarqueeFull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/marquee_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:letterSpacing="0.05" />

            </LinearLayout>

            <!-- Cards Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="32dp">

                <!-- Card 1: Person Info -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="#fbfdfc"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="1.05"
                            android:text="@string/person_name_doc"
                            android:textColor="#010101"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/person_category"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="#E0E0E0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="198dp"
                                android:layout_height="wrap_content"
                                android:text="@string/birth_date_label"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/birth_date_value"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="198dp"
                                android:layout_height="wrap_content"
                                android:text="@string/rnokpp_label"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rnokpp_value"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 2: Deferment -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#fbfdfc"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="198dp"
                                android:layout_height="wrap_content"
                                android:text="@string/deferment_label"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/deferment_value"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="#E0E0E0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deferment_type_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/deferment_type_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 3: Disability -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#fbfdfc"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/disability_group_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/disability_group_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/disability_reason_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/disability_reason_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="#E0E0E0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="198dp"
                                android:layout_height="wrap_content"
                                android:text="@string/disability_valid_until_label"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/disability_valid_until_value"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 4: TCK -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#fbfdfc"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tck_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/tck_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="#E0E0E0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="198dp"
                                android:layout_height="wrap_content"
                                android:text="@string/rank_label"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rank_value"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="198dp"
                                android:layout_height="wrap_content"
                                android:text="@string/vos_label"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vos_value"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/category_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/category_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/category_speciality"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/oberig_number_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/oberig_number_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 5: Contacts -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#fbfdfc"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/phone_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/email_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/email_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/address_label"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/address_value"
                            android:textColor="#010101"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 6: Data Update -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#fbfdfc"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check"
                                android:contentDescription="@string/status_check" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/data_clarified"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="#E0E0E0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="198dp"
                                android:layout_height="wrap_content"
                                android:text="@string/data_update_date_label"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/data_update_date_value"
                                android:textColor="#010101"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>