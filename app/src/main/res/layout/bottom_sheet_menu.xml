<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingTop="16dp"
    android:paddingBottom="32dp">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:background="#000000"
        android:alpha="0.3" />

    <!-- Переглянути документ -->
    <LinearLayout
        android:id="@+id/btnViewDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_info"
            android:contentDescription="Переглянути документ" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Переглянути документ"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:letterSpacing="0.01" />
    </LinearLayout>

    <!-- Завантажити PDF -->
    <LinearLayout
        android:id="@+id/btnDownloadPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_download"
            android:contentDescription="Завантажити PDF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Завантажити PDF"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:letterSpacing="0.01" />
    </LinearLayout>

    <!-- Оновити документ -->
    <LinearLayout
        android:id="@+id/btnRefreshDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Оновити документ" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Оновити документ"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:letterSpacing="0.01" />
    </LinearLayout>

    <!-- Розширені дані з реєстру -->
    <LinearLayout
        android:id="@+id/btnExtendedData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add_circle"
            android:contentDescription="Розширені дані з реєстру" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Розширені дані з реєстру"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:letterSpacing="0.01" />
    </LinearLayout>

    <!-- Подати запит на відстрочку -->
    <LinearLayout
        android:id="@+id/btnRequestDeferment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_document_add"
            android:contentDescription="Подати запит на відстрочку" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Подати запит на відстрочку"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:letterSpacing="0.01" />
    </LinearLayout>

    <!-- Направлення на ВЛК -->
    <LinearLayout
        android:id="@+id/btnMedicalDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_medical"
            android:contentDescription="Направлення на ВЛК" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Направлення на ВЛК"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:letterSpacing="0.01" />
    </LinearLayout>

    <!-- Уточнити контактні дані -->
    <LinearLayout
        android:id="@+id/btnUpdateContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingVertical="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Уточнити контактні дані" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="Уточнити контактні дані"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:letterSpacing="0.01" />
    </LinearLayout>

</LinearLayout>