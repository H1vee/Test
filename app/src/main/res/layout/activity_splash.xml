<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23221e">

    <ImageView
        android:id="@+id/ivSplashLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/splash_logo"
        android:contentDescription="Splash Logo"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/app_name_display_activity"
        android:textColor="#e8e6e1"
        android:textSize="38sp"
        android:textStyle="bold"
        android:letterSpacing="0.01"
        android:gravity="center"
        android:lineSpacingMultiplier="0.95"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSplashLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>